@model Mission06_Carpenter.Models.Movie
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <h1>Enter A Movie</h1>
    <form method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="MovieId" />
        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="" selected disabled>Please Select an Option</option>
                <option value="1">Miscellaneous</option>
                <option value="2">Drama</option>
                <option value="3">Television</option>
                <option value="4">Horror/Suspense</option>
                <option value="5">Comedy</option>
                <option value="6">Family</option>
                <option value="7">Action/Adventure</option>
                <option value="8">VHS</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input required asp-for="Title" class="form-control" />
            <div class="invalid-feedback">Title is required</div>
        </div>
        <div class="form-group">
            <label asp-for="Year">Year</label>
            <input required asp-for="Year" type="number" min="1888" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Director">Director</label>
            <input asp-for="Director" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Rating">Rating</label>
            <select required asp-for="Rating" class="form-control">
                <option value="" selected disabled>Please Select an Option</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Edited">Edited</label>
            <select required asp-for="Edited" class="form-control">
                <option value="" selected disabled>Please Select an Option</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="LentTo">Lent To</label>
            <input asp-for="LentTo" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Notes">Notes</label>
            <input maxlength="25" asp-for="Notes" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CopiedToPlex">Copied To Plex</label>
            <select required asp-for="CopiedToPlex" class="form-control">
                <option value="" selected disabled>Please Select an Option</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <br />
        <button type="submit">Submit Movie To Database</button>
    </form>
</div>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
