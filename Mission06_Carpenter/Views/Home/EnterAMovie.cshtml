@model Mission06_Carpenter.Models.Movie

<h1>Enter A Movie</h1>

<form method="post">
    <label asp-for="MovieCategory">Category</label>
    <input required asp-for="MovieCategory" />
    <br />
    <label asp-for="MovieName">Title</label>
    <input required asp-for="MovieName" />
    <br />
    <label asp-for="MovieYear">Year</label>
    <input required asp-for="MovieYear" />
    <br />
    <label asp-for="MovieDirector">Director</label>
    <input required asp-for="MovieDirector" />
    <br />
    <label asp-for="MovieRating">Rating</label>
    <select required asp-for="MovieRating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="MovieEdited">Edited</label>
    <select asp-for="MovieEdited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="MovieLentTo">Lent To</label>
    <input asp-for="MovieLentTo" />
    <br />
    <label asp-for="MovieNotes">Notes</label>
    <input maxlength="25" asp-for="MovieNotes" />
    <br />

    <button type="submit">Submit Movie To Database</button>
</form>
